<h1>Meal Ideas</h1>

<h2>Your Favorites</h2>

<ul>
<% faveRecipes.forEach(recipe=>{ %>
    <li>
        <img src="<%= recipe.image %>" height=100px width=150px>
        <a href="/food/<%= recipe.apiId %>">
        <%= recipe.name %> 
        </a>
        <form method="POST" action="/food/add">
            <input type="hidden" name="id" value="<%= recipe.id %>">
            <input type="hidden" name="name" value="<%= recipe.name %>">
            <input type="submit" value="Add To Party Plan">
        </form>
    </li>
<% }) %>
</ul> 


<h3>Search for Recipes</h3>


<form method="GET" action="/food/results">
    <label for="foodKeyword">Search for Recipes:</label>
    <input type="text" name="keyword" id="foodKeyword">
    <input type="submit" value="Search">
</form>


